{
    "GH": {
        "indicators": {},
        "cwdi": {
            "weights": [
                0.3,
                0.25,
                0.2,
                0.15,
                0.1
            ],
            "start_date": "01-01",
            "end_date": "12-31",
            "year_offset": 0,
            "aggregation": "mean"
        },
        "interpolation": {
            "method": "lsm_idw"
        },
        "classification": {
            "method": "natural_breaks",
            "num_classes": 4
        }
    },
    "LCY": {
        "indicators": {
            "Pre": {
                "type": "period_sum",
                "frequency": "yearly",
                "start_date": "05-20",
                "end_date": "06-10",
                "variable": "precip",
                "description": "5月20日-6月10日总降水量"
            },
            "SSH": {
                "type": "period_sum",
                "frequency": "yearly",
                "start_date": "05-20",
                "end_date": "06-10",
                "variable": "sunshine",
                "description": "5月20日-6月10日总日照时数"
            },
            "Pre_days": {
                "type": "conditional_count",
                "frequency": "yearly",
                "start_date": "05-20",
                "end_date": "06-10",
                "conditions": [
                    {
                        "variable": "precip",
                        "operator": ">=",
                        "value": 0.1
                    }
                ],
                "description": "5月20日-6月10日降水日数"
            }
        },
        "interpolation": {
            "method": "idw"
        },
        "classification": {
            "method": "custom_thresholds",
            "thresholds": [
                {"min": 0.1, "level": 1, "label": "高风险"},
                {"min": 0.07, "max": 0.1, "level": 2, "label": "中风险"},
                {"min": 0.05, "max": 0.07, "level": 3, "label": "中风险"},
                {"max":0.05, "level": 4, "label": "低风险"}  
            ]
        }
    },
    "CJWSD": {
        "indicators": {
        },
        "valid_d0": {
            "start_date": "01-01",
            "end_date": "12-31",
            "aggregation": "mean"
        },
        "valid_d1": {
            "start_date": "01-01",
            "end_date": "12-31",
            "aggregation": "mean"
        },
        "interpolation": {
            "method": "idw",
            "params": {
                "block_size": 256,
                "radius_dist": 5.0,
                "min_num": 10,
                "first_size": 100,
                "nodata":0
            }
        },
        "classification": {
            "method": "natural_breaks",
            "num_classes": 4,
            "thresholds": [
            {"min": "","max": 0.45, "level": 4, "label": "低风险"},    
            {"min": 0.45, "max": 0.55, "level": 3, "label": "中风险"},  
            {"min": 0.55, "max": 0.65, "level": 2, "label": "高风险"},  
            {"min": 0.65, "max": "","level": 1, "label": "极高风险"}   
            ]
        }
    },
    "GRF": {
        "indicators": {
            "GRF_light": {
                "type": "conditional_count",
                "frequency": "yearly",
                "start_date": "05-01",
                "end_date": "06-10",
                "conditions": [
                    {
                        "variable": "tmax",
                        "operator": ">=",
                        "value": 32
                    },
                    {
                        "variable": "tmax",
                        "operator": "<",
                        "value": 35
                    },
                    {
                        "variable": "rhum",
                        "operator": "<=",
                        "value": 30
                    },
                    {
                        "variable": "wind",
                        "operator": ">=",
                        "value": 3
                    },
                    {
                        "variable": "wind",
                        "operator": "<=",
                        "value": 70
                    }
                ],
                "description": "轻度干热风日数"
            },
            "GRF_severe": {
                "type": "conditional_count",
                "frequency": "yearly",
                "start_date": "05-01",
                "end_date": "06-10",
                "conditions": [
                    {
                        "variable": "tmax",
                        "operator": ">=",
                        "value": 35
                    },
                    {
                        "variable": "rhum",
                        "operator": "<=",
                        "value": 25
                    },
                    {
                        "variable": "wind",
                        "operator": ">=",
                        "value": 3
                    },
                    {
                        "variable": "tmax",
                        "operator": "<=",
                        "value": 100
                    },
                    {
                        "variable": "wind",
                        "operator": "<=",
                        "value": 70
                    }
                ],
                "description": "重度干热风日数"
            }
        },
        "classification": {
            "method": "natural_breaks",
            "num_classes": 4,
            "thresholds": [
            {"min": "","max": 0.45, "level": 4, "label": "低风险"},    
            {"min": 0.45, "max": 0.55, "level": 3, "label": "中风险"},  
            {"min": 0.55, "max": 0.65, "level": 2, "label": "高风险"},  
            {"min": 0.65, "max": "","level": 1, "label": "极高风险"}   
            ]
        },
        "interpolation": {
            "method": "idw",
            "params": {
                "block_size": 256,
                "radius_dist": 5.0,
                "min_num": 10,
                "first_size": 100,
                "nodata":0
            }
        }
    }

}
