{
    "GRF": {
        "indicators": {
            "GRF_light": {
                "type": "conditional_count",
                "frequency": "yearly",
                "start_date": "01-01",
                "end_date": "12-31",
                "conditions": [
                    {
                        "variable": "tmax",
                        "operator": ">=",
                        "value": 32
                    },
                    {
                        "variable": "tmax",
                        "operator": "<",
                        "value": 34
                    },
                    {
                        "variable": "rhum",
                        "operator": "<=",
                        "value": 30
                    },
                    {
                        "variable": "wind",
                        "operator": ">=",
                        "value": 3
                    },
                    {
                        "variable": "wind",
                        "operator": "<=",
                        "value": 70
                    }
                ],
                "description": "轻度干热风日数"
            },
            "GRF_moderate": {
                "type": "conditional_count",
                "frequency": "yearly",
                "start_date": "01-01",
                "end_date": "12-31",
                "conditions": [
                    {
                        "variable": "tmax",
                        "operator": ">=",
                        "value": 34
                    },
                    {
                        "variable": "tmax",
                        "operator": "<",
                        "value": 35
                    },
                    {
                        "variable": "rhum",
                        "operator": "<=",
                        "value": 25
                    },
                    {
                        "variable": "wind",
                        "operator": ">=",
                        "value": 3
                    },
                    {
                        "variable": "wind",
                        "operator": "<=",
                        "value": 70
                    }
                ],
                "description": "中度干热风日数"
            },
            "GRF_severe": {
                "type": "conditional_count",
                "frequency": "yearly",
                "start_date": "01-01",
                "end_date": "12-31",
                "conditions": [
                    {
                        "variable": "tmax",
                        "operator": ">=",
                        "value": 35
                    },
                    {
                        "variable": "rhum",
                        "operator": "<=",
                        "value": 25
                    },
                    {
                        "variable": "wind",
                        "operator": ">=",
                        "value": 3
                    },
                    {
                        "variable": "tmax",
                        "operator": "<=",
                        "value": 100
                    },
                    {
                        "variable": "wind",
                        "operator": "<=",
                        "value": 70
                    }
                ],
                "description": "重度干热风日数"
            }
        },
        "classification": {
            "method": "custom_thresholds",
            "thresholds": [
                {"max": 0.00000001, "level": 0, "label": "无风险"},
                {"min": 0.00000001, "max": 1, "level": 1, "label": "低风险"},
                {"min": 1.00000001, "max": 3, "level": 2, "label": "中风险"},
                {"min": 3.00000001, "max": 6, "level": 3, "label": "高风险"},
                {"min": 6.00000001, "level": 4, "label": "极高风险"}
            ]
        },
        "interpolation": {
            "method": "LSM"
        }
    }
}