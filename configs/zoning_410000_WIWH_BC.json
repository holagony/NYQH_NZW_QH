{
    "CMB": {
        "indicators": {
            "P1": {
                "type": "period_sum",
                "frequency": "yearly",
                "start_date": "04-01",
                "end_date": "04-05",
                "variable": "precip"
            },
            "H1": {
                "type": "period_sum",
                "frequency": "yearly",
                "start_date": "04-16",
                "end_date": "04-20",
                "variable": "sunshine"
            },
            "H2": {
                "type": "period_sum",
                "frequency": "yearly",
                "start_date": "05-11",
                "end_date": "05-15",
                "variable": "sunshine"
            },
            "P2": {
                "type": "period_sum",
                "frequency": "yearly",
                "start_date": "05-11",
                "end_date": "05-15",
                "variable": "precip"
            }
        },
        "formula": {
            "type": "custom_formula",
            "standardize": "True",
            "formula": "0.2*P1-0.32*H1-0.43*H2-0.05*P2",
            "variables": {
                "P1": {
                    "ref": "P1"
                },
                "H1": {
                    "ref": "H1"
                },
                "H2": {
                    "ref": "H2"
                },
                "P2": {
                    "ref": "P2"
                }
            }
        },
        "interpolation": {
            "order": "after",
            "method": "lsm_idw"
        },
        "classification": {
            "method": "custom_thresholds",
            "thresholds": [
            {"min": "","max": 0.5, "level": 4, "label": "低风险"},
            {"min": 0.5, "max": 0.65, "level": 3, "label": "中风险"},
            {"min": 0.65, "max": 0.8, "level": 2, "label": "高风险"},
            {"min": 0.8, "max": "","level": 1, "label": "极高风险"}
            ]
        }
    },
    "TXB": {
        "indicators": {
            "Tmean1": {
                "type": "period_mean",
                "frequency": "yearly",
                "start_date": "03-21",
                "end_date": "03-31",
                "variable": "tavg"
            },
            "P1": {
                "type": "period_sum",
                "frequency": "yearly",
                "start_date": "04-01",
                "end_date": "04-10",
                "variable": "precip"
            },
            "Tmin": {
                "type": "period_extreme",
                "extreme_type": "min",
                "frequency": "yearly",
                "start_date": "04-21",
                "end_date": "04-30",
                "variable": "tmin"
            },
            "P2": {
                "type": "period_sum",
                "frequency": "yearly",
                "start_date": "11-11",
                "end_date": "11-20",
                "variable": "precip"
            },
            "H1": {
                "type": "period_sum",
                "frequency": "yearly",
                "start_date": "12-11",
                "end_date": "12-20",
                "variable": "sunshine"
            },
            "Tmean2": {
                "type": "period_mean",
                "frequency": "yearly",
                "start_date": "12-01",
                "end_date": "12-10",
                "variable": "tavg"
            }
        },
        "formula": {
            "standardize": "True",
            "formula_north": {
                "type": "custom_formula",
                "formula": "0.3*Tmean1+0.11*P1-0.59*Tmin",
                "variables": {
                    "Tmean1": {
                        "ref": "Tmean1"
                    },
                    "P1": {
                        "ref": "P1"
                    },
                    "Tmin": {
                        "ref": "Tmin"
                    }
                }
        },
            "formula_south": {
                "type": "custom_formula",
                "formula": "-0.16*P2-0.25*H1+0.59*Tmean2",
                "variables": {
                    "P2": {
                        "ref": "P2"
                    },
                    "H1": {
                        "ref": "H1"
                    },
                    "Tmean2": {
                        "ref": "Tmean2"
                    }
                }
            }
        },
         "interpolation": {
            "order": "after",
            "method": "lsm_idw"
        },
        "classification": {
            "method": "custom_thresholds",
            "thresholds": [
            {"min": "","max": 0.44, "level": 4, "label": "低风险"},
            {"min": 0.44, "max": 0.49, "level": 3, "label": "中风险"},
            {"min": 0.49, "max": 0.56, "level": 2, "label": "高风险"},
            {"min": 0.56, "max": "","level": 1, "label": "极高风险"}
            ]
        }
    }
}

