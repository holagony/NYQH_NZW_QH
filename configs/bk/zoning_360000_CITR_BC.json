{
    "MS": {
        "indicators": {
            "P1": {
                "type": "period_sum",
                "frequency": "lta",
                "start_date": "12-01",
                "end_date": "02-28",
                "year_offset": 1,
                "variable": "precip",
                "desc":"最冷季节总降水量"
            },
            "T1": {
                "type": "period_mean", 
                "frequency": "lta",
                "start_date": "12-01",
                "end_date": "02-28",
                "year_offset": 1,
                "variable": "tavg",
                "desc":"最冷季节平均气温"
            },
            "D1": {
                "type": "conditional_count",
                "frequency": "lta", 
                "start_date": "12-01",
                "end_date": "02-28",
                "desc":"冬季平均气温小于0天数",
                "year_offset": 1,
                "conditions": [
                    {
                        "variable": "tavg",
                        "operator": "<",
                        "value": 0
                    }
                ]
            },
            "T2": {
                "type": "period_extreme",
                "frequency": "lta", 
                "start_date": "07-01",
                "end_date": "07-31",
                "desc":"最暖月最高气温",
                "extreme_type":"max",
                "variable": "tmax"
            },
            "D2": {
                "type": "conditional_count",
                "frequency": "lta", 
                "start_date": "08-01",
                "end_date": "08-31",
                "desc":"8月份平均气温大于30度天数",
                "conditions": [
                    {
                        "variable": "tavg",
                        "operator": ">",
                        "value": 30
                    }
                ]
            }            
        },
        "season_std": {
            "start_date": "01-01",
            "end_date": "12-31"
        },
        "interpolation": {
            "method": "lsm_idw",
            "params": {
                "block_size": 256,
                "radius_dist": 5.0,
                "min_num": 10,
                "first_size": 100,
                "nodata":0
            }
        },        
        "classification": {
            "method": "natural_breaks",
            "num_classes": 4,
            "reverse_order": "False",
            "thresholds": [
            {"min": "","max": 0.55, "level": 4, "label": "低风险"},    
            {"min": 0.55, "max": 0.65, "level": 3, "label": "中风险"},  
            {"min": 0.65, "max": 0.75, "level": 2, "label": "高风险"},  
            {"min": 0.75, "max": "","level": 1, "label": "极高风险"}   
            ]
        }
    }
}
