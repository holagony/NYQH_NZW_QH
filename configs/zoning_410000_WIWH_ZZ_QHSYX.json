{
    "indicators": {
        "X1": {
            "type": "period_sum",
            "frequency": "lta",
            "year_offset": 1,
            "start_date": "10-01",
            "end_date": "05-31",
            "variable": "precip"
        },
        "X2": {
            "type": "conditional_sum",
            "frequency": "lta",
            "year_offset": 1,
            "start_date": "10-01",
            "end_date": "05-31",
            "conditions": [
                {
                    "variable": "tavg",
                    "operator": ">=",
